{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "allowJs": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "jest.setup.ts",
    "src/**/*.tsx",
    "src/**/*.ts"
  ]
} 